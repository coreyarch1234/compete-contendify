<div class="col-sm-12">
    <legend>Join Contendify</legend>
    <form id='signup'>
        <div class="form-group">
            <input type="text" name='first' class="form-control" id="first" placeholder="First Name"><br>
            <input type="text" name='last' class="form-control" id="last" placeholder="Last name">
            <!-- Add grade dropdown option -->
        </div>
        <input type="email" name='email' class="form-control" id="email" placeholder="Email"><br>
        <input type="password" name='password' class="form-control" id="password" placeholder="Password"><br>
        <div>
            <select name="grade" class="form-group" id="grade-choice">
              <option value="fiveToEight">5th - 8th Grade</option>
              <option value="nine">9th Grade</option>
              <option value="ten">10th Grade</option>
              <option value="eleven">11th Grade</option>
              <option value="twelve">12th Grade</option>
            </select>
        </div>
        <button type='submit' class="btn btn-primary btn-responsive button-create-showcase">Register</button>
    </form>
</div>
